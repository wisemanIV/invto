<%- model_class = Email -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:template) %>:</strong></dt>
  <dd><%= @email.template %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to) %>:</strong></dt>
  <dd><%= @email.to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
  <dd><%= @email.from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:toname) %>:</strong></dt>
  <dd><%= @email.toname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fromname) %>:</strong></dt>
  <dd><%= @email.fromname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ref) %>:</strong></dt>
  <dd><%= @email.ref %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              emails_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_email_path(@email), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_path(@email),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
