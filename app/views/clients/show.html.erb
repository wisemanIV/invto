<%= render 'home/usernav' %>

<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @client.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contactemail) %>:</strong></dt>
  <dd><%= @client.contactemail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:urlscheme) %>:</strong></dt>
  <dd><%= @client.urlscheme %></dd>
  <dt><strong><%= model_class.human_attribute_name(:defaulturl) %>:</strong></dt>
  <dd><%= @client.defaulturl %></dd>
  <dt><strong><%= model_class.human_attribute_name(:domain) %>:</strong></dt>
  <dd><%= @client.domain %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_client_path(@client), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
