<%= form_for @shareable, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :input, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :input, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :client_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :client_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ref, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ref, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                shareables_path, :class => 'btn' %>
  </div>
<% end %>
