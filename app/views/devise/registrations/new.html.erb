<h2>Create a free account. Why not?</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :id => 'sign_up') do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => 'Email'%></div>

  <div>
  <%= f.password_field :password, :placeholder => 'Password'%></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password' %></div>

  <div><%= f.submit "Sign up", :class => 'btn square' %></div>
<% end %>

<%= render "devise/shared/links" %>
