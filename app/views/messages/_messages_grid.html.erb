<%= grid(@links_grid, :show_filters => :always)  do |g|

	g.column :name => 'Id', :attribute => 'id' do |message|
  		message.id
	end

	g.column :name => 'Campaign', :attribute => 'campaign' , :custom_filter => :auto, auto_reload: true do |message|
		message.campaign
	end
  
	g.column :name => 'Version', :attribute => 'version'  do |message|
		message.version
	end

	g.column :name => 'To', :attribute => 'to' do |message|
		message.to
	end
  
	g.column :name => 'From', :attribute => 'from'  do |message|
		message.from
	end

	g.column :name => 'Body', :attribute => 'body' do |message|
		message.body
	end
	
	g.column :name => 'Attachment', :attribute => 'attachment' do |message|
		link_to(image_tag(message.attachment.thumb.url), message.attachment_url) if message.attachment?
	end
			  
	g.column :name => 'Status', :attribute => 'status', :custom_filter => :auto, auto_reload: true do |message|
		message.status
	end
			  
	g.column :name => 'Created', :attribute => 'created_at', filter: false do |message|
		message.formatted_created_at
	end
			  
	g.column :name => 'Updated', :attribute => 'updated_at', filter: false do |message|
		message.formatted_updated_at
	end
			  

end -%>