<%= form_for @message, :html => { :class => 'form-horizontal', 'data-type' => 'json'} do |f| %>
<div class="control-group">
  <%= f.label :campaign, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :campaign %>
  </div>
</div>
<div class="control-group">
  <%= f.label :version, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :version %>
  </div>
</div>
  <div class="control-group">
    <%= f.label :to, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :to, :cols => 15, :rows => 7, :style => "font-size: 12px" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :cols => 15, :rows => 7, :style => "font-size: 12px" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                messages_path, :class => 'btn' %>
  </div>
<% end %>
